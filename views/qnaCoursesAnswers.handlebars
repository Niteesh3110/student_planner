<main class="h-auto w-100" id="main-qna">
  <section
    class="d-flex flex-column justify-content-start align-content-start"
    id="qna"
  >
    <div class="d-flex justify-content-between align-items-center px-3">
      <div class="m-3">
        <p>Username</p>
        <h3 class="">
          Question
        </h3>
        <p>Description</p>
        <p class="" id="question-creation-date">Asked On</p>
      </div>
      <button
        type="button"
        class="btn btn-outline-dark btn-md m-3 text-center fs-4 fw-lighter text-secondary rounded-pill"
        style="width: auto;"
        data-bs-toggle="modal"
        data-bs-target="#exampleModal"
        title="Add Answer"
      ><i class="bi bi-plus"></i></button>
    </div>
    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Post Answer</h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            {{! <div class="mb-3">
              <label
                for="exampleFormControlInput1"
                class="form-label"
              >Question</label>
              <input
                type="text"
                class="form-control"
                id="exampleFormControlInput1"
                placeholder="Question?"
              />
            </div> }}
            <div class="mb-3">
              <label
                for="exampleFormControlTextarea1"
                class="form-label"
              >Answer</label>
              <textarea
                class="form-control"
                id="exampleFormControlTextarea1"
                rows="3"
                placeholder="Write your answer here..."
              ></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary">POST</button>
          </div>
        </div>
      </div>
    </div>
    <div class="border border-start-0 border-end-0 m-3">
      <div class="card m-4 border-0 mx-2 my-4 bg-white">
        <div class="card-header border-0 bg-white">
          User Name
        </div>
        <div class="card-body p-4 bg-white">
          <h5 class="card-title">Question</h5>
          <p class="card-text">Description</p>
          <p class="" id="question-creation-date">Answered On</p>
          <div class="d-flex gap-2 p-2 w-auto">
            <button
              class="btn btn-outline-secondary rounded-pill border p-2"
              id="comment"
              title="Add Comment"
            >
              <i class="bi bi-chat-left"></i>
              0
            </button>
            <div
              class="d-flex justify-content-center align-item-center gap-1 text-center border rounded-pill p-1"
            >
              <button
                class="btn btn-outline-secondary rounded-pill border-0 p-0"
                id="like-btn"
                title="Like"
              >
                <i class="bi bi-hand-thumbs-up"></i>
              </button>
              <p class="align-item-center m-0 pt-1">1</p>
              <button
                class="btn btn-outline-secondary rounded-pill border-0 p-0"
                id="dislike-btn"
                title="Dislike"
              >
                <i class="bi bi-hand-thumbs-down"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>