<section class="vh-100 w-100 d-flex justify-content-center align-items-center">
  <div
    class="px-4 py-5 px-md-5 text-center text-lg-start"
    style="background-color: hsl(0, 0%, 96%)"
  >
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            Student Planner
            <br />
            <span class="text-primary">Simplifying Student Life</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Welcome to Student Planner - your gateway to academic excellence!
            Designed with students in mind, this platform equips you with
            powerful tools to simplify every aspect of your educational journey.
            From planning your courses to staying on top of your deadlines,
            connecting with classmates, or perfecting your writing, we've got
            you covered. Embrace a smarter, more organized way to succeedâ€”start
            today with Advanced Student Planner!
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="d-flex flex-column card-body py-5 px-md-5 mt-4">
              <h2 class="fw-bold mb-2 text-uppercase text-center">SIGN IN</h2>
              <p class="text-black-50 mb-4 text-center">Please enter your user
                name and password!</p>
              {{#if error}}<p id="error" class="error-text">{{error}}</p>{{/if}}
              <form id="signin-form" method="post" action="/signin">
                <!-- Email input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input
                    type="text"
                    id="userId"
                    name="userId"
                    class="form-control"
                    placeholder="User Name"
                    aria-label="userId"
                  />
                </div>

                <!-- Password input -->
                <div data-mdb-input-init class="form-outline mb-4">
                  <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    placeholder="Password"
                    aria-label="password"
                  />
                </div>

                <!-- Submit button -->
                <button
                  type="submit"
                  data-mdb-button-init
                  data-mdb-ripple-init
                  class="btn btn-primary btn-block mb-2"
                >
                  Sign In
                </button>

                <!-- Register buttons -->
                <div class="text-center">
                  <p>or sign up</p>
                  <a
                    role="button"
                    href="/signup"
                    data-mdb-button-init
                    data-mdb-ripple-init
                    class="btn btn-primary btn-floating mx-1"
                  >Sign Up
                  </a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="module" src="/public/js/signin.js"></script>